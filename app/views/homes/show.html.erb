<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <div class="well">
          <%= simple_form_for :session, url: session_path do |form| %>
            <div class="form-group">
              <%= form.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: "form-control" } %>
            </div>
            <div class="form-group">
              <%= form.input :password,
                          required: false,
                          input_html: { class: "form-control" } %>
            </div>
              <%= form.button :submit, "Log in", class: "btn btn-primary btn-block" %>
          <% end %>
          <div class="form-group">
            <div class="col-md-12 control">
              <div style="padding-top:5px">
                  Don't have an account! 
              <a href="<%= new_user_path %>">
                  Sign Up Here
              </a>
              </div>
            </div>
          </div>   
        </div>
      </div>
    </div>
  </div>
</section>
