<nav class="navbar navbar-expand-lg navbar-light" id="navbar" style="background-color: skyblue;">
  <% if signed_in? %>
    <%= link_to 'Shout!', dashboard_path, class: 'navbar-brand', id: "dashboard-link" %>
  <% else %>
    <%= link_to 'Shout!', root_path, class: 'navbar-brand', id: "root-link" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <% if signed_in? %>
      <li class="nav-item active">
        <%= link_to 'Users', users_path, class: 'nav-link', id: "users-link" %>
      </li>
      <% end %>
    </ul>
    <span class="navbar-text">
      <ul class="navbar-nav mr-auto">
      <% if signed_in? %>
        <li class="nav-item active">
          <%= link_to "Welcome #{current_user.username}", dashboard_path, class: 'nav-link', id: "welcome-user" %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Sign out', session_path, method: :delete, class: 'nav-link', id: "sign-out-button" %>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to 'Sign in', new_session_path, class: 'nav-link', id: "sign-in-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Sign up', new_user_path, class: 'nav-link', id: "sign-up-link" %>
        </li>
      <% end %>
      </ul>
    </span>
  </div>
    <% if signed_in? %>
      <%= bootstrap_form_for(:search, url: search_path, method: :get, :html => { class: "form-inline"}) do |form| %>
        <%= form.text_field :term, class: "form-control mr-sm-2", id: 'search-form-input', hide_label: true, placeholder: 'Search' %>
        <%= form.submit 'Search', class: "btn btn-primary my-2 my-sm-0", id: 'search-form-submit' %>
      <% end %>
    <% end %>
</nav>